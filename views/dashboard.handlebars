<div class="row mt-4">
  <div class="col-md-6 post-list">
    <h2>Dashboard</h2>
    {{#if posts.length}}
    <div class="container col-md-6">
      <h3>Current Posts:</h3>
    </div>
    {{#each posts as |posts|}}
    <div class="row mb-2">
      <div class="card">
      <div class="col-md-8">
        <h4 class="card-header"><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4 card-body">
        <p class="card-text">
          {{post.content}}
        </p>
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Post</button>
      </div>
    </form>
  </div>
  </div>


<script src="../public/js/dashboard.js"></script>
<script src="../public/js/create.js"></script>
